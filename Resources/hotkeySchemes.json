        // Delete
        { "command": "DeleteClips", "key": "X" },
        { "command": "DeleteClips", "key": "Delete" },
        { "command": "DeleteClips", "key": "Backspace" },

        // Paste
        { "command": "PasteClips", "key": "Command + V" },
